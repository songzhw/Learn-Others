<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/primary"
    app:cardCornerRadius="@dimen/corner_radius_tv_show_details_cover"
    app:cardElevation="18dp"
    app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="130dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/image_view_item_time_calculator_cover"
            style="@style/EpisodieTheme.ImageViewCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/item_all_cover_description"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/text_view_item_time_calculator_runtime"
            android:layout_width="@dimen/width_item_most_popular_runtime"
            android:layout_height="@dimen/height_item_most_popular_runtime"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/all_item_ic_timer"
            android:gravity="center"
            android:paddingTop="@dimen/padding_top_item_most_popular_runtime"
            android:textSize="@dimen/text_size_item_most_popular_runtime"
            app:layout_constraintStart_toStartOf="@id/image_view_item_time_calculator_cover"
            app:layout_constraintTop_toTopOf="@id/image_view_item_time_calculator_cover"/>

        <TextView
            android:id="@+id/text_view_item_time_calculator_title"
            style="@style/EpisodieTheme.TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gradient"
            android:maxLines="3"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_item_most_popular_title"
            app:layout_constraintBottom_toBottomOf="@id/image_view_item_time_calculator_cover"
            app:layout_constraintEnd_toEndOf="@id/image_view_item_time_calculator_cover"
            app:layout_constraintStart_toStartOf="@id/image_view_item_time_calculator_cover"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
