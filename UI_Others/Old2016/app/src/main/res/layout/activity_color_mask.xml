<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="clickBlue" android:text="Blue"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="clickYellow" android:text="Yellow"/>

    <ImageView android:id="@+id/ivColorMask" android:layout_width="70dp" android:layout_height="70dp"/>
    <ImageView android:id="@+id/ivColorMask2" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="15dp"/>

</LinearLayout>