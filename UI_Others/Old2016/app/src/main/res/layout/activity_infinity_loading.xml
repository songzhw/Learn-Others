<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.ndczz.infinityloading.sample.MainActivity">

    <ca.six.ui.others.infinity_loading.InfinityLoading
        android:id="@+id/inifinityLoading"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:infl_backColor="#3F51B5"
        app:infl_drawBack="true"
        app:infl_progressColor="#FF6F00"
        app:infl_strokeWidth="8dp" />

    <CheckBox
        android:id="@+id/checkboxReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="reverse" />

    <CheckBox
        android:id="@+id/checkboxDrawBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:checked="true"
        android:text="drawback" />

</LinearLayout>
